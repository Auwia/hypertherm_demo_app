<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.app.hypertherm"
    android:versionCode="1100"
    android:versionName="1.10.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:manageSpaceActivity="it.app.hypertherm_demo.activity.MainActivity"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="it.app.hypertherm_demo.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.WorkActivity"
            android:label="@string/title_activity_work"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.TessutoActivity"
            android:label="@string/title_activity_tessuto"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.PatologiaActivity"
            android:label="@string/title_activity_patologia"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.StrutturaProfonditaActivity"
            android:label="@string/title_activity_struttura_profondita"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="it.app.hypertherm_demo.activity.OpenPdfActivity"
            android:label="@string/title_activity_open_pdf"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>